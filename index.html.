<body>
  <main class="wrap">
    <h1>Bienvenue dans ton espace de cours&nbsp;!</h1>
    <label for="prenom">Quel est ton prénom&nbsp;?</label>
    <input id="prenom" class="input" placeholder="Ton prénom" autocomplete="given-name" />
    <div class="row">
      <button id="go" class="btn">Continuer</button>
      <div id="msg" class="hint"></div>
    </div>
  </main>

  <script>
    const $ = (id)=>document.getElementById(id);
    const prenom = $('prenom'), msg = $('msg');
    $('go').onclick = () => {
      const n = (prenom.value || '').trim();
      if (!n) { msg.textContent = 'Entre ton prénom pour continuer.'; return; }
      localStorage.setItem('prenom', n);
      msg.textContent = `C’est noté, ${n} !`;
      // plus tard : rediriger vers la suite
      // location.href = 'suite.html';
    };
  </script>
</body>
</html>
